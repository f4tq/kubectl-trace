FROM fedora:31

WORKDIR /

# build requirements
RUN dnf install -y git gcc ncurses-devel elfutils-libelf-devel bc wget \
bzip2 vim openssl-devel libcap-devel clang llvm graphviz bison flex make \
glibc-static glibc-devel.i686 iproute-devel binutils-devel diffutils

# needed utilities
RUN dnf install -y findutils net-tools lsof iproute strace

ADD fetch-linux-headers.sh /

ENTRYPOINT [ "/fetch-linux-headers.sh" ]
